{
  "manifest_version": 3,
  "name": "Calendar Event Creator",
  "version": "1.0",
  "description": "Create calendar events from selected text using natural language processing",
  
  "permissions": [
    "contextMenus",
    "activeTab",
    "storage"
  ],
  
  "host_permissions": [
    "https://api.jacolabs.com/*"
  ],
  
  "background": {
    "service_worker": "background.js"
  },
  
  "content_scripts": [
    {
      "matches": ["<all_urls>"],
      "js": ["content.js"]
    }
  ],
  
  "action": {
    "default_popup": "popup.html",
    "default_title": "Calendar Event Creator"
  },
  
  "icons": {
    "16": "icons/icon-16.png",
    "32": "icons/icon-32.png",
    "48": "icons/icon-48.png",
    "128": "icons/icon-128.png"
  },
  
  "web_accessible_resources": [
    {
      "resources": ["popup.html"],
      "matches": ["<all_urls>"]
    }
  ]
}